@model HomeBookkeeping.Web.Models.HomeBookkeeping.СreditСardDTOBase


<form asp-action="СreditСardDelete">

    <input asp-for="UserId" hidden />
    <input asp-for="СreditСardId" hidden />
    <input asp-for="IsPageUser" hidden />
    <input asp-for="UserFullName" hidden />
    <br />
    <div class="container border p-3 bg-light">
        <h1 class="text-primary">Удалить кредитную карту</h1>

        <hr />
        <div class="row">


            <div class="col-2">
                <label asp-for="BankName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="BankName" disabled class="form-control" />
            </div>


            <div class="col-2">
                <label asp-for="UserFullName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UserFullName" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Number" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Number" disabled class="form-control" />
            </div>


            <div class="col-2">
                <label asp-for="L_Account" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="L_Account" disabled class="form-control" />
            </div>


            <div class="col-2">
                <label asp-for="Sum" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Sum" disabled class="form-control" />
            </div>


            @if (@Model.IsPageUser)
            {
                <div class="col-5 offset-2">
                    <a asp-action="СreditСardIndex" class="btn btn-outline-primary form-control">Вернуться</a>
                </div>
                <div class="col-5">
                    <input type="submit" value="Удалить" class="btn btn-outline-primary form-control" />
                </div>
            }
            else
            {
                <div class="col-5 offset-2">
                     <a asp-action="СreditСardUserIndex" asp-route-fullName="@Model.UserFullName" class="btn btn-outline-primary form-control">Вернуться</a>
                </div>
                <div class="col-5">
                     <input type="submit" value="Удалить" class="btn btn-outline-primary form-control" />
                </div>
            }
        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
