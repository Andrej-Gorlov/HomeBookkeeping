@model HomeBookkeeping.Web.Models.HomeBookkeeping.СreditСardDTOBase


<form asp-action="СreditСardEdit">
    <input asp-for="СreditСardId" hidden />
    <input asp-for="UserFullName" hidden />
    <input asp-for="IsPageUser" hidden />
    <input asp-for="UserId" hidden />
    <br />
    <div class="container border p-3 bg-light">
        <h1 class="text-primary">Обновить кредитную карту @Model.UserFullName</h1>

        <hr />
        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="col-2">
                <label asp-for="BankName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="BankName" class="form-control" />
                <span asp-validation-for="BankName" class="text-danger"></span>
            </div>


             <div class="col-2">
                <label asp-for="Number" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="L_Account" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="L_Account" class="form-control" />
                <span asp-validation-for="L_Account" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="Sum" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Sum" class="form-control" />
                <span asp-validation-for="Sum" class="text-danger"></span>
            </div>


            @if(@Model.IsPageUser){
            <div class="col-5 offset-2">
                <a asp-action="СreditСardIndex" class="btn btn-outline-primary form-control">Вернуться</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Обновить" class="btn btn-outline-primary form-control" />
            </div>
            }
            else{
                <div class="col-5 offset-2">
                <a asp-action="СreditСardUserIndex" asp-route-fullName="@Model.UserFullName" class="btn btn-outline-primary form-control">Вернуться</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Обновить" class="btn btn-outline-primary form-control" />
            </div>
            }


        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}