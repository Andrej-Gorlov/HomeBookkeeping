@model HomeBookkeeping.Web.Models.ViewModels.СreditСardVM

<form asp-action="СreditСardCreate">
    <br />
    <div class="container border p-3 bg-light">
        <h1 class="text-primary">Создать кредитную карту</h1>

        <hr />
        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="col-2">
                <label asp-for="СreditСard.BankName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="СreditСard.BankName" class="form-control" />
                <span asp-validation-for="СreditСard.BankName" class="text-danger"></span>
            </div>

  
                    <div class="col-2">
                        <label asp-for="СreditСard.UserFullName" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <!--раскрывающий список-->
                    <div class="col-10 pb-3">
                        <select asp-for="СreditСard.UserId" asp-items="@Model.FullNameList" class="form-select">
                            <option disabled selected>Выбор пользователя</option><!--disabled отключает выбор-->
                        </select>
                        <span asp-validation-for="СreditСard.UserId" class="text-danger"></span>
                    </div>


            <div class="col-2">
                <label asp-for="СreditСard.Number" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="СreditСard.Number" class="form-control" />
                <span asp-validation-for="СreditСard.Number" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="СreditСard.L_Account" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="СreditСard.L_Account" class="form-control" />
                <span asp-validation-for="СreditСard.L_Account" class="text-danger"></span>
            </div>


             <div class="col-2">
                <label asp-for="СreditСard.Sum" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="СreditСard.Sum" class="form-control" />
                <span asp-validation-for="СreditСard.Sum" class="text-danger"></span>
            </div>



            <div class="col-5 offset-2">
                <a asp-action="СreditСardIndex" class="btn btn-outline-primary form-control">Вернуться</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Добавить" class="btn btn-outline-primary form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

