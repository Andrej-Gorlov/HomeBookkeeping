@model HomeBookkeeping.Web.Models.ViewModels.СreditСardVM

    <br /><br />

    <div class="container p-4 border bg-light">
        <div class="row pb-2">
            <div class="col ">
                <h1 class="text-primary"> Список кредитных карт </h1>
            </div>

            <div class="col text-end pt-1">
                <a asp-action="СreditСardCreate" class="btn btn-outline-primary">
                    <i class="fas fa-plus"></i> Создать новую кредитную карту </a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Название банка
                    </th>
                    <th>
                        Полное имя владельца
                    </th>
                    <th>
                        Номер карты
                    </th>
                    <th>
                        Лицевой счёт
                    </th>
                    <th>
                        Баланс
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CreditСards)
                {
                    <tr>
                        <td>
                            @item.BankName
                        </td>
                        <td>
                            @item.UserFullName
                        </td>
                        <td>
                            @item.Number
                        </td>
                        <td>
                            @item.L_Account
                        </td>
                        <td>
                            @item.Sum
                        </td>
                        <td>
                            <a asp-action="СreditСardEdit" class="btn btn-outline-primary" 
                            asp-route-creditСardId="@item.СreditСardId" asp-route-isPageUser="true">
                            <i class="fas fa-edit"></i>
                            </a>

                             <a asp-action="СreditСardDelete" class="btn btn-outline-primary" 
                            asp-route-creditСardId="@item.СreditСardId" asp-route-isPageUser="true">
                            <i class="fas fa-trash"></i>
                            </a>

                            <a asp-action="СreditСardEnrollment" class="btn btn-outline-primary" 
                            asp-route-creditСardId="@item.СreditСardId" asp-route-isPageUser="true">
                            <i class="fas fa-ruble-sign"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

         <div class="text-center">
        @if (Model.Paging.HasPrevious)
        {
            <a asp-action="СreditСardIndex"
               asp-route-page="@(Model.Paging.CurrentPage - 1)"
               class="btn btn-outline-primary">
                <i class="glyphicon glyphicon-chevron-left"></i>
                Назад
            </a>
        }

        @for (int i = 1; i <= Model.Paging.TotalPages; i++)
        {
            @if (@Model.Paging.CurrentPage!=i)
            {
                <a asp-action="СreditСardIndex" asp-route-page="@i"
                class="btn btn-outline-primary">@i</a>
            }
        }

        @if (Model.Paging.HasNext&& Model.Paging.CurrentPage!=1)
        {
            <a asp-action="СreditСardIndex"
               asp-route-page="@(Model.Paging.CurrentPage + 1)"
               class="btn btn-outline-primary">
                Вперед
                <i class="glyphicon glyphicon-chevron-right"></i>
            </a>
        }
   </div>

    </div>
