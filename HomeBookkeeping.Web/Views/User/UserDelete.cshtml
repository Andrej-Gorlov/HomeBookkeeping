@model HomeBookkeeping.Web.Models.HomeBookkeeping.UserDTOBase


<form asp-action="UserDelete">

    <input asp-for="UserId" hidden />

    <br />
    <div class="container border p-3 bg-light">
        <h1 class="text-primary">Удалить пользователя</h1>

        <hr />
        <div class="row">


            <div class="col-2">
                <label asp-for="FullName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="FullName" disabled class="form-control" />
            </div>


            <div class="col-2">
                <label asp-for="Email" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Email" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="PhoneNumber" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="PhoneNumber" disabled class="form-control" />
            </div>


            <div class="col-5 offset-2">
                <a asp-action="UserIndex" class="btn btn-outline-primary form-control">Вернуться</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Удалить" class="btn btn-outline-primary form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}