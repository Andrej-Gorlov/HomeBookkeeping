@model HomeBookkeeping.Web.Models.HomeBookkeeping.TransactionDTOBase


<form asp-action="TransactionDelete">

    <input asp-for="Id" hidden />

    <br />
    <div class="container border p-3 bg-light">
        <h1 class="text-primary">Удалить транзакцию</h1>

        <hr />
        <div class="row">


            <div class="col-2">
                <label asp-for="UserFullName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UserFullName" disabled class="form-control" />
            </div>


            <div class="col-2">
                <label asp-for="NumberCardUser" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="NumberCardUser" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="RecipientName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="RecipientName" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="DateOperations" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DateOperations" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Sum" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Sum" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Category" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Category" disabled class="form-control" />
            </div>


            <div class="col-5 offset-2">
                <a asp-action="TransactionGet" class="btn btn-outline-primary form-control">Вернуться</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Удалить" class="btn btn-outline-primary form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
