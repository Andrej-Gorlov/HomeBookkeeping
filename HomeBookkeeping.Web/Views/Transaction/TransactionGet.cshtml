@model IEnumerable<HomeBookkeeping.Web.Models.HomeBookkeeping.TransactionDTOBase>

    <br /><br />

    <div class="container p-4 border bg-light">
        <div class="row pb-2">
            <div class="col ">
                <h1 class="text-primary"> Список транзакций </h1>
            </div>

            <div class="col text-end pt-1">
                <a asp-action="TransactionDeleteDateTime" class="btn btn-outline-primary">
                    <i class="fas fa-trash"></i> По дате и времени </a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Пользователь
                    </th>
                    <th>
                        Кредитная карта
                    </th>
                    <th>
                        Получатель
                    </th>
                     <th>
                        Дата
                    </th>
                    <th>
                        Сумма
                    </th>
                    <th>
                        Вид расхода
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.UserFullName
                        </td>
                        <td>
                            @item.NumberCardUser
                        </td>
                        <td>
                            @item.RecipientName
                        </td>
                         <td>
                            @item.DateOperations
                        </td>
                        <td>
                            @item.Sum &#8381
                        </td>
                        <td>
                            @item.Category
                        </td>
                        <td>

                             <a asp-action="TransactionDelete" class="btn btn-outline-primary" 
                            asp-route-transactionId="@item.Id">
                            <i class="fas fa-trash"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
