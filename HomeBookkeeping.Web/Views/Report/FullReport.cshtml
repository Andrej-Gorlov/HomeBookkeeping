@model IEnumerable<HomeBookkeeping.Web.Models.HomeBookkeeping.ReportBase>

@if (@Model.Count() > 0)
{
    <br /><br />

    <div class="container p-4 border bg-light">
        <div class="row pb-2">
            <div class="col ">
                <h1 class="text-primary"> Отчёт </h1>
            </div>
            <div class="col text-end pt-1">
                <a asp-action="ReportIndex" class="btn btn-outline-primary">Вернуться</a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Имя
                    </th>
                    <th>
                        Период
                    </th>
                    <th>
                        Категория
                    </th>
                    <th>
                        Итог
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.FullName
                        </td>
                        <td>
                            @item.DateTime.ToString("MMMM yyyy")
                        </td>
                        <td>
                            <div class="hiddenBlock">
                                Детали
                                <div class="openBlock">
                                    @*__________________________________________________________________*@
                                    <div container p-4 border bg-light >

                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Название категории
                                                    </th>
                                                    <th>
                                                        Получатель
                                                    </th>
                                                    <th>
                                                        Итог по категории
                                                    </th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var itemCategory in @item.Сategories)
                                                {
                                                    <tr>
                                                        <td>
                                                            @itemCategory.NameTypeExpense
                                                        </td>

                                                        <td>
                                                            @*__________________________________________________________________*@
                                                            <div class="hiddenBlock_2">
                                                                Детали
                                                                <div class="openBlock_2">

                                                                    <div container p-4 border bg-light >

                                                                        <table class="table">
                                                                            <thead>
                                                                                <tr>
                                                                                    <th>
                                                                                        Получатель
                                                                                    </th>
                                                                                    <th>
                                                                                        Итог
                                                                                    </th>
                                                                                    <th></th>
                                                                                </tr>
                                                                            </thead>
                                                                            <tbody>
                                                                                @foreach (var itemRecipients in @itemCategory.Recipients)
                                                                                {
                                                                                    <tr>
                                                                                        <td>
                                                                                            @itemRecipients.NameRecipient
                                                                                        </td>
                                                                                        <td>
                                                                                            @itemRecipients.NameRecipientSum
                                                                                        </td>
                                                                                    </tr>
                                                                                }
                                                                            </tbody>
                                                                        </table>

                                                                    </div>

                                                                </div>
                                                            </div>
                                                            @*__________________________________________________________________*@
                                                        </td>
                                                        <td>
                                                            @itemCategory.SumTypeExpense
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    @*__________________________________________________________________*@
                                </div>
                            </div>

                        </td>
                        <td>
                            @item.Sum
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else{
   <div class="container border p-3 bg-light">
        <div class="row pb-2">
            <div class="col ">
                <h1 class="text-primary"> Отчёт пуст </h1>
            </div>
            <div class="col text-end pt-1">
                <a asp-action="ReportIndex" class="btn btn-outline-primary">Вернуться</a>
            </div>
        </div>
   </div>
}